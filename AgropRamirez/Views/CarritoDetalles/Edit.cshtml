@model AgropRamirez.Models.CarritoDetalle

@{
    ViewData["Title"] = "Editar Detalle del Carrito";
}

<!-- Encabezado -->
<div class="container-fluid page-header py-5 mb-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="container text-center py-5">
        <h1 class="display-3 text-white mb-4 animated slideInDown">Detalle de Carrito</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb justify-content-center mb-0">
                <li class="breadcrumb-item"><a asp-action="Index">Carrito Detalles</a></li>
                <li class="breadcrumb-item active" aria-current="page">Crear</li>
            </ol>
        </nav>
    </div>
</div>

<h1 class="mb-4">Editar detalle del carrito</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm p-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <!-- Carrito -->
                    <div class="form-group mb-3">
                        <label asp-for="CarritoId" class="form-label">Carrito</label>
                        <select asp-for="CarritoId" class="form-control" asp-items="ViewBag.CarritoId"></select>
                        <span asp-validation-for="CarritoId" class="text-danger"></span>
                    </div>

                    <!-- Producto -->
                    <div class="form-group mb-3">
                        <label asp-for="ProductoId" class="form-label">Producto</label>
                        <select asp-for="ProductoId" class="form-control" asp-items="ViewBag.ProductoId"></select>
                        <span asp-validation-for="ProductoId" class="text-danger"></span>
                    </div>

                    <!-- Cantidad -->
                    <div class="form-group mb-3">
                        <label asp-for="Cantidad" class="form-label"></label>
                        <input asp-for="Cantidad" class="form-control" type="number" min="1" id="Cantidad" />
                        <span asp-validation-for="Cantidad" class="text-danger"></span>
                    </div>

                    <!-- Precio Unitario -->
                    <div class="form-group mb-3">
                        <label asp-for="PrecioUnitario" class="form-label"></label>
                        <input asp-for="PrecioUnitario" class="form-control" type="number" step="0.01" id="PrecioUnitario" />
                        <span asp-validation-for="PrecioUnitario" class="text-danger"></span>
                    </div>

                    <!-- SubTotal (solo lectura) -->
                    <div class="form-group mb-3">
                        <label>SubTotal</label>
                        <input class="form-control" id="SubTotal" readonly />
                    </div>

                    <!-- Botones -->
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-success me-2">
                            <i class="bi bi-plus-circle"></i> Guardar
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Volver a la lista
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


