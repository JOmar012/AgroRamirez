@model AgropRamirez.ViewModels.CheckoutVM

@{
    ViewData["Title"] = "Confirmar Pedido";
}

<div class="container my-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Resumen de tu pedido</h2>
        <a asp-controller="Productos" asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left-circle"></i> Seguir comprando
        </a>
    </div>

    @if (Model.HayProblemasDeStock)
    {
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle"></i>
            Algunos productos superan el stock disponible. Ajusta cantidades antes de confirmar.
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Producto</th>
                            <th class="text-center">Cant.</th>
                            <th class="text-end">Precio</th>
                            <th class="text-end">Subtotal</th>
                            <th class="text-center">Stock</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            var supera = item.Cantidad > item.StockDisponible;
                            <tr class="@(supera ? "table-warning" : "")">
                                <td>
                                    <div class="d-flex align-items-center gap-2">
                                        @if (!string.IsNullOrEmpty(item.Imagen))
                                        {
                                            <img src="@item.Imagen" style="width:48px;height:48px;object-fit:cover;border-radius:6px;" />
                                        }
                                        <span>@item.Nombre</span>
                                    </div>
                                </td>
                                <td class="text-center">@item.Cantidad</td>
                                <td class="text-end">S/ @item.PrecioUnitario.ToString("F2")</td>
                                <td class="text-end fw-semibold">S/ @item.Subtotal.ToString("F2")</td>
                                <td class="text-center">
                                    @item.StockDisponible
                                    @(supera ? " (excede)" : "")
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="3" class="text-end fw-bold">Total</td>
                            <td class="text-end fw-bold">S/ @Model.Total.ToString("F2")</td>
                            <td></td>
                        </tr>
                    </tfoot>
                </table>
            </div>

            <div class="d-flex justify-content-between mt-3">
                <a asp-controller="Carritoes" asp-action="MiCarrito" class="btn btn-outline-primary">
                    <i class="bi bi-pencil-square"></i> Editar carrito
                </a>

                <form asp-controller="Pedidos" asp-action="ConfirmarPedido" method="post" class="m-0">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-success fw-bold" @(Model.HayProblemasDeStock ? "disabled" : "")>
                        <i class="bi bi-check-circle"></i> Confirmar pedido
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>