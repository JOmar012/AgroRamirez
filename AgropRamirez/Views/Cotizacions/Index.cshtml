@model IEnumerable<AgropRamirez.Models.Cotizacion>

@{
    ViewData["Title"] = "Listado de Cotizaciones";
}

<!-- Encabezado -->
<div class="container-fluid page-header py-5 mb-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="container text-center py-5">
        <h1 class="display-3 text-white mb-4 animated slideInDown">Cotizaciones</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb justify-content-center mb-0">
                <li class="breadcrumb-item"><a asp-action="Index">Cotizaciones</a></li>
                <li class="breadcrumb-item active" aria-current="page">Listado</li>
            </ol>
        </nav>
    </div>
</div>

<div class="container">
    <p class="text-end">
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Nueva Cotización
        </a>
    </p>

    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-body">
            <table class="table table-striped table-hover table-bordered align-middle">
                <thead class="table-primary text-center">
                    <tr>
                        <th>Fecha Cotización</th>
                        <th>Válido Hasta</th>
                        <th>Total</th>
                        <th>Estado</th>
                        <th>Usuario</th>
                        <th style="width: 180px;">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.FechaCotizacion.ToString("dd/MM/yyyy")</td>
                            <td>@item.ValidoHasta?.ToString("dd/MM/yyyy")</td>
                            <td>S/ @item.Total.ToString("0.00")</td>
                            <td class="text-center">
                                @switch (item.Estado)
                                {
                                    case "Pendiente":
                                        <span class="badge bg-warning text-dark">Pendiente</span>
                                        ;
                                        break;
                                    case "Aceptada":
                                        <span class="badge bg-success">Aceptada</span>
                                        ;
                                        break;
                                    case "Rechazada":
                                        <span class="badge bg-danger">Rechazada</span>
                                        ;
                                        break;
                                    case "Vencida":
                                        <span class="badge bg-secondary">Vencida</span>
                                        ;
                                        break;
                                    default:
                                        <span class="badge bg-light text-dark">@item.Estado</span>
                                        ;
                                        break;
                                }
                            </td>
                            <td>@($"{item.Usuario?.Nombre} {item.Usuario?.Apellido}")</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.CotizacionId" class="btn btn-sm btn-warning text-white me-1">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.CotizacionId" class="btn btn-sm btn-info text-white me-1">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.CotizacionId" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>