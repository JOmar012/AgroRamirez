@model AgropRamirez.Models.Promocion

@{
    ViewData["Title"] = "Crear Promoción";
}

<!-- Page Header Start -->
<div class="container-fluid page-header py-5 mb-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="container text-center py-5">
        <h1 class="display-3 text-white mb-4 animated slideInDown">Promociones</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb justify-content-center mb-0">
                <li class="breadcrumb-item"><a asp-action="Index">Promociones</a></li>
                <li class="breadcrumb-item active" aria-current="page">Crear</li>
            </ol>
        </nav>
    </div>
</div>
<!-- Page Header End -->

<h1 class="mb-4">Registrar nueva promoción</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Nombre -->
            <div class="form-group mb-3">
                <label asp-for="Nombre" class="form-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <!-- Imagen (subida de archivo, en lugar de texto) -->
            <div class="form-group mb-3">
                <label asp-for="Imagen" class="form-label">Imagen de la promoción</label>
                <input asp-for="Imagen" type="file" class="form-control" accept="image/*" />
                <span asp-validation-for="Imagen" class="text-danger"></span>
            </div>

            <!-- Descripción -->
            <div class="form-group mb-3">
                <label asp-for="Descripcion" class="form-label"></label>
                <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>

            <!-- Fecha Inicio -->
            <div class="form-group mb-3">
                <label asp-for="FechaInicio" class="form-label"></label>
                <input asp-for="FechaInicio"
                       class="form-control"
                       type="datetime-local"
                       value="@(Model?.FechaInicio.ToString("yyyy-MM-ddTHH:mm"))" />
                <span asp-validation-for="FechaInicio" class="text-danger"></span>
            </div>

            <!-- Fecha Fin -->
            <div class="form-group mb-3">
                <label asp-for="FechaFin" class="form-label"></label>
                <input asp-for="FechaFin"
                       class="form-control"
                       type="datetime-local"
                       value="@(Model?.FechaFin.ToString("yyyy-MM-ddTHH:mm"))" />
                <span asp-validation-for="FechaFin" class="text-danger"></span>
            </div>

            <!-- Descuento -->
            <div class="form-group mb-3">
                <label asp-for="Descuento" class="form-label"></label>
                <input asp-for="Descuento" class="form-control" type="number" step="0.01" placeholder="Ej: 15 (%)" />
                <span asp-validation-for="Descuento" class="text-danger"></span>
            </div>

            <!-- Producto con imagen -->
            <div class="form-group mb-3">
                <label asp-for="ProductoId" class="form-label">Producto</label>
                <select asp-for="ProductoId" class="form-control">
                    @foreach (var prod in (IEnumerable<AgropRamirez.Models.Producto>)ViewBag.Productos)
                    {
                        <option value="@prod.ProductoId"
                                data-img="@prod.Imagen">
                            @prod.Nombre (@prod.Precio.ToString("C"))
                        </option>
                    }
                </select>
                <span asp-validation-for="ProductoId" class="text-danger"></span>
            </div>

            <!-- Vista previa de imagen del producto seleccionado -->
            <div class="form-group mb-3 text-center">
                <img id="previewProducto" src="#" alt="Imagen del producto" style="max-width:200px; display:none; border:1px solid #ccc; padding:5px; border-radius:6px;" />
            </div>

            <!-- Botón -->
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-secondary ms-2">Volver</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        // Mostrar imagen del producto seleccionado en el combo
        document.querySelector("select[name='ProductoId']").addEventListener("change", function () {
            var selected = this.options[this.selectedIndex];
            var imgUrl = selected.getAttribute("data-img");
            var preview = document.getElementById("previewProducto");

            if (imgUrl) {
                preview.src = imgUrl;
                preview.style.display = "block";
            } else {
                preview.style.display = "none";
            }
        });
    </script>
}
