@model AgropRamirez.ViewModels.PromocionCreateViewModel

@{
    ViewData["Title"] = "Crear Promoción";
}

<!-- Page Header Start -->
<div class="container-fluid page-header py-5 mb-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="container text-center py-5">
        <h1 class="display-3 text-white mb-4 animated slideInDown">Registrar Promoción</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb justify-content-center mb-0">
                <li class="breadcrumb-item"><a asp-action="Index">Promociones</a></li>
                <li class="breadcrumb-item active" aria-current="page">Crear</li>
            </ol>
        </nav>
    </div>
</div>
<!-- Page Header End -->

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">

            <div class="card shadow-lg border-0 rounded-3">
                <!-- Header con ícono -->
                <div class="card-header text-center bg-white">
                    <h4 class="mb-0 fw-bold text-danger">Nueva Promoción</h4>
                    <div class="avatar-preview mx-auto d-flex align-items-center justify-content-center rounded-circle shadow mb-3"
                         style="width:120px; height:120px; background-color:#fff; border:3px solid #dc3545; color:#dc3545;">
                        <i class="bi bi-gift-fill" style="font-size:48px;"></i>
                    </div>
                </div>

                <!-- Formulario -->
                <div class="card-body p-4">
                    <form asp-action="Create" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- Nombre -->
                        <div class="mb-3">
                            <label asp-for="Nombre" class="form-label">
                                <i class="bi bi-type"></i> Nombre
                            </label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-type"></i></span>
                                <input asp-for="Nombre" class="form-control" />
                            </div>
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <!-- Imagen de la promoción con vista previa -->
                        <div class="mb-3">
                            <label asp-for="ImagenFile" class="form-label">
                                <i class="bi bi-image"></i> Imagen de la promoción
                            </label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-upload"></i></span>
                                <input asp-for="ImagenFile" type="file" class="form-control" accept="image/*" onchange="previewImage(event)" />
                            </div>
                            <span asp-validation-for="ImagenFile" class="text-danger"></span>
                        </div>
                        <div class="text-center mb-3">
                            <img id="preview" src="#" alt="Vista previa"
                                 style="max-width: 200px; display:none; border:1px solid #ccc; border-radius:6px; padding:4px;" />
                        </div>

                        <!-- Descripción -->
                        <div class="mb-3">
                            <label asp-for="Descripcion" class="form-label">
                                <i class="bi bi-card-text"></i> Descripción
                            </label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-card-text"></i></span>
                                <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
                            </div>
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>

                        <!-- Fechas -->
                        <div class="mb-3">
                            <label asp-for="FechaInicio" class="form-label">
                                <i class="bi bi-calendar-event"></i> Fecha Inicio
                            </label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-calendar-event"></i></span>
                                <input asp-for="FechaInicio" class="form-control" type="datetime-local" />
                            </div>
                            <span asp-validation-for="FechaInicio" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="FechaFin" class="form-label">
                                <i class="bi bi-calendar-event-fill"></i> Fecha Fin
                            </label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-calendar-event-fill"></i></span>
                                <input asp-for="FechaFin" class="form-control" type="datetime-local" />
                            </div>
                            <span asp-validation-for="FechaFin" class="text-danger"></span>
                        </div>

                        <!-- Descuento -->
                        <div class="mb-3">
                            <label asp-for="Descuento" class="form-label">
                                <i class="bi bi-percent"></i> Descuento
                            </label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-percent"></i></span>
                                <input asp-for="Descuento" class="form-control" type="number" step="0.01" placeholder="Ej: 15 (%)" />
                            </div>
                            <span asp-validation-for="Descuento" class="text-danger"></span>
                        </div>

                        <!-- Productos con checkbox + imagen circular -->
                        <div class="mb-3">
                            <label class="form-label">
                                <i class="bi bi-box"></i> Seleccionar Productos
                            </label>
                            <div class="list-group" style="max-height: 220px; overflow-y: auto;">
                                @foreach (var prod in (IEnumerable<AgropRamirez.Models.Producto>)ViewBag.Productos)
                                {
                                    <label class="list-group-item d-flex align-items-center">
                                        <input type="checkbox" name="ProductosSeleccionados" value="@prod.ProductoId" class="form-check-input me-2" />
                                        <img src="@prod.Imagen" alt="@prod.Nombre"
                                             class="rounded-circle me-2"
                                             style="width:40px; height:40px; object-fit:cover;" />
                                        <span>@prod.Nombre (@prod.Precio.ToString("C"))</span>
                                    </label>
                                }
                            </div>
                        </div>

                        <!-- Botones -->
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left-circle"></i> Volver
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-check-circle"></i> Registrar
                            </button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        function previewImage(event) {
            var reader = new FileReader();
            reader.onload = function () {
                var output = document.getElementById('preview');
                output.src = reader.result;
                output.style.display = 'block';
            };
            reader.readAsDataURL(event.target.files[0]);
        }
    </script>
}