@model AgropRamirez.Models.Promocion

@{
    ViewData["Title"] = "Editar Promoción";
}
<!-- Page Header Start -->
<div class="container-fluid page-header py-5 mb-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="container text-center py-5">
        <h1 class="display-3 text-white mb-4 animated slideInDown">Promociones</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb justify-content-center mb-0">
                <li class="breadcrumb-item"><a asp-action="Index">Promociones</a></li>
                <li class="breadcrumb-item active" aria-current="page">Editar</li>
            </ol>
        </nav>
    </div>
</div>
<!-- Page Header End -->

<h1 class="mb-4">Editar la promoción</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PromocionId" />

            <!-- Nombre -->
            <div class="form-group mb-3">
                <label asp-for="Nombre" class="form-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <!-- Imagen actual -->
            @if (!string.IsNullOrEmpty(Model.Imagen))
            {
                <div class="form-group mb-3">
                    <label>Imagen actual</label><br />
                    <img src="@Model.Imagen" alt="Imagen actual" style="max-width:200px; border:1px solid #ccc; padding:5px; border-radius:6px;" />
                </div>
            }

            <!-- Nueva imagen -->
            <div class="form-group mb-3">
                <label asp-for="Imagen" class="form-label">Nueva imagen (opcional)</label>
                <input asp-for="Imagen" type="file" class="form-control" accept="image/*" onchange="previewImage(event)" />
                <span asp-validation-for="Imagen" class="text-danger"></span>
            </div>

            <!-- Preview de nueva imagen -->
            <div class="form-group mb-3 text-center">
                <img id="preview" src="#" alt="Vista previa de la nueva imagen" style="max-width:200px; display:none; border:1px solid #ccc; padding:5px; border-radius:6px;" />
            </div>

            <!-- Descripción -->
            <div class="form-group mb-3">
                <label asp-for="Descripcion" class="form-label"></label>
                <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>

            <!-- Fecha Inicio -->
            <div class="form-group mb-3">
                <label asp-for="FechaInicio" class="form-label"></label>
                <input asp-for="FechaInicio"
                       class="form-control"
                       type="datetime-local"
                       value="@(Model?.FechaInicio.ToString("yyyy-MM-ddTHH:mm"))" />
                <span asp-validation-for="FechaInicio" class="text-danger"></span>
            </div>

            <!-- Fecha Fin -->
            <div class="form-group mb-3">
                <label asp-for="FechaFin" class="form-label"></label>
                <input asp-for="FechaFin"
                       class="form-control"
                       type="datetime-local"
                       value="@(Model?.FechaFin.ToString("yyyy-MM-ddTHH:mm"))" />
                <span asp-validation-for="FechaFin" class="text-danger"></span>
            </div>

            <!-- Descuento -->
            <div class="form-group mb-3">
                <label asp-for="Descuento" class="form-label"></label>
                <input asp-for="Descuento" class="form-control" type="number" step="0.01" placeholder="Ej: 15 (%)" />
                <span asp-validation-for="Descuento" class="text-danger"></span>
            </div>

            <!-- Producto con nombre -->
            <div class="form-group mb-3">
                <label asp-for="ProductoId" class="form-label">Producto</label>
                <select asp-for="ProductoId" class="form-control">
                    @foreach (var prod in (IEnumerable<AgropRamirez.Models.Producto>)ViewBag.Productos)
                    {
                        <option value="@prod.ProductoId"
                                data-img="@prod.Imagen"
                                selected="@(prod.ProductoId == Model.ProductoId)">
                            @prod.Nombre (@prod.Precio.ToString("C"))
                        </option>
                    }
                </select>
                <span asp-validation-for="ProductoId" class="text-danger"></span>
            </div>

            <!-- Preview de producto -->
            <div class="form-group mb-3 text-center">
                <img id="previewProducto" src="@Model.Producto?.Imagen" alt="Imagen del producto" style="max-width:200px; border:1px solid #ccc; padding:5px; border-radius:6px;" />
            </div>

            <!-- Botones -->
            <div class="form-group">
                <input type="submit" value="Guardar cambios" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary ms-2">Volver</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        // Preview de la nueva imagen de promoción
        function previewImage(event) {
            var reader = new FileReader();
            reader.onload = function () {
                var output = document.getElementById('preview');
                output.src = reader.result;
                output.style.display = 'block';
            };
            reader.readAsDataURL(event.target.files[0]);
        }

        // Preview de producto seleccionado
        document.querySelector("select[name='ProductoId']").addEventListener("change", function () {
            var selected = this.options[this.selectedIndex];
            var imgUrl = selected.getAttribute("data-img");
            var preview = document.getElementById("previewProducto");

            if (imgUrl) {
                preview.src = imgUrl;
                preview.style.display = "block";
            } else {
                preview.style.display = "none";
            }
        });
    </script>
}
