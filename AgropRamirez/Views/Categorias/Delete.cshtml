@model AgropRamirez.Models.Categoria

@{
    ViewData["Title"] = "Eliminar Categoría";
}

<!-- Page Header Start -->
<div class="container-fluid page-header py-5 mb-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="container text-center py-5">
        <h1 class="display-3 text-white mb-4 animated slideInDown">Eliminar Categoría</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb justify-content-center mb-0">
                <li class="breadcrumb-item"><a asp-action="Index">Categorías</a></li>
                <li class="breadcrumb-item active" aria-current="page">Eliminar</li>
            </ol>
        </nav>
    </div>
</div>
<!-- Page Header End -->

<div class="container my-5">
    <div class="card shadow-lg border-0 rounded-3 p-4">
        <div class="row g-4 align-items-center">

            <!-- Avatar a la izquierda -->
            <div class="col-md-3 text-center">
                <i class="fas fa-horse" style="font-size:100px; color:#dc3545;"></i>
            </div>

            <!-- Datos y confirmación a la derecha -->
            <div class="col-md-9">
                <h4 class="mb-3 text-danger"><i class="bi bi-exclamation-triangle-fill"></i> Confirmar eliminación</h4>
                <p class="text-muted">¿Estás seguro de que deseas eliminar esta categoría? Esta acción no se puede deshacer.</p>

                <dl class="row">
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Nombre)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Nombre)
                    </dd>

                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Descripcion)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Descripcion)
                    </dd>
                </dl>

                <!-- Formulario de eliminación -->
                <form asp-action="Delete" method="post" class="mt-3">
                    <input type="hidden" asp-for="CategoriaId" />
                    <div class="d-flex justify-content-start">
                        <button type="submit" class="btn btn-danger me-2">
                            <i class="bi bi-trash-fill"></i> Eliminar
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left-circle"></i> Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>