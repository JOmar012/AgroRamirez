@model IEnumerable<AgropRamirez.Models.PedidoDetalle>

@{
    ViewData["Title"] = "Listado de Detalles de Pedido";
}

<!-- Encabezado -->
<div class="container-fluid page-header py-5 mb-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="container text-center py-5">
        <h1 class="display-3 text-white mb-4 animated slideInDown">Detalles de Pedido</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb justify-content-center mb-0">
                <li class="breadcrumb-item"><a asp-action="Index">Detalles</a></li>
                <li class="breadcrumb-item active" aria-current="page">Listado</li>
            </ol>
        </nav>
    </div>
</div>

<div class="container">
    <p class="text-end">
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Nuevo Detalle
        </a>
    </p>

    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-body">
            <table class="table table-striped table-hover table-bordered align-middle">
                <thead class="table-primary text-center">
                    <tr>
                        <th>Cliente</th>
                        <th>Fecha Pedido</th>
                        <th>Producto</th>
                        <th>Cantidad</th>
                        <th>Precio Unitario</th>
                        <th>Subtotal</th>
                        <th style="width: 180px;">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@($"{item.Pedido.Usuario?.Nombre} {item.Pedido.Usuario?.Apellido}")</td>
                            <td>@item.Pedido.FechaPedido.ToString("dd/MM/yyyy")</td>
                            <td>@item.Producto.Nombre</td>
                            <td class="text-center">@item.Cantidad</td>
                            <td>S/ @item.PrecioUnitario.ToString("0.00")</td>
                            <td>S/ @(item.Cantidad* item.PrecioUnitario)</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.PedidoDetalleId" class="btn btn-sm btn-warning text-white me-1">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.PedidoDetalleId" class="btn btn-sm btn-info text-white me-1">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.PedidoDetalleId" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>