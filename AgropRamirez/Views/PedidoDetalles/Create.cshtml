@model AgropRamirez.Models.PedidoDetalle

@{
    ViewData["Title"] = "Crear Detalle de Pedido";
}

<!-- Encabezado -->
<div class="container-fluid page-header py-5 mb-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="container text-center py-5">
        <h1 class="display-3 text-white mb-4 animated slideInDown">Nuevo Detalle</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb justify-content-center mb-0">
                <li class="breadcrumb-item"><a asp-action="Index">Detalles del Pedido</a></li>
                <li class="breadcrumb-item active" aria-current="page">Crear</li>
            </ol>
        </nav>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">

            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-primary text-white text-center">
                    <h4 class="mb-0"><i class="bi bi-cart-plus"></i> Agregar Detalle</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- Pedido -->
                        <div class="mb-3">
                            <label asp-for="PedidoId" class="form-label"></label>
                            <select asp-for="PedidoId" class="form-select" asp-items="ViewBag.PedidoId"></select>
                            <span asp-validation-for="PedidoId" class="text-danger"></span>
                        </div>

                        <!-- Producto -->
                        <div class="mb-3">
                            <label asp-for="ProductoId" class="form-label"></label>
                            <select asp-for="ProductoId" class="form-select" asp-items="ViewBag.ProductoId"></select>
                            <span asp-validation-for="ProductoId" class="text-danger"></span>
                        </div>

                        <!-- Cantidad -->
                        <div class="mb-3">
                            <label asp-for="Cantidad" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-123"></i></span>
                                <input asp-for="Cantidad" class="form-control" type="number" min="1" />
                            </div>
                            <span asp-validation-for="Cantidad" class="text-danger"></span>
                        </div>

                        <!-- Precio Unitario -->
                        <div class="mb-3">
                            <label asp-for="PrecioUnitario" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text">S/</span>
                                <input asp-for="PrecioUnitario" class="form-control" type="number" step="0.01" />
                            </div>
                            <span asp-validation-for="PrecioUnitario" class="text-danger"></span>
                        </div>

                        <!-- Subtotal (solo lectura) -->
                        <div class="mb-3">
                            <label class="form-label">Subtotal</label>
                            <div class="input-group">
                                <span class="input-group-text">S/</span>
                                <input type="text" class="form-control" id="Subtotal" readonly />
                            </div>
                        </div>

                        <!-- Botones -->
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left-circle"></i> Volver
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-circle"></i> Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    @* //Sub total que se vea en las vistas *@
    <script>
        function calcularSubtotal() {
            let cantidad = parseFloat(document.getElementById("Cantidad").value) || 0;
            let precio = parseFloat(document.getElementById("PrecioUnitario").value) || 0;
            let subtotal = cantidad * precio;
            document.getElementById("Subtotal").value = subtotal.toFixed(2);
        }

        document.getElementById("Cantidad").addEventListener("input", calcularSubtotal);
        document.getElementById("PrecioUnitario").addEventListener("input", calcularSubtotal);

        // Calcular en carga inicial (ej. en Edit)
        window.addEventListener("load", calcularSubtotal);
    </script>
}
