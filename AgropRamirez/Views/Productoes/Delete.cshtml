@model AgropRamirez.Models.Producto

@{
    ViewData["Title"] = "Eliminar Producto";
}

<!-- Page Header -->
<div class="container-fluid page-header py-5 mb-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="container text-center py-5">
        <h1 class="display-3 text-white mb-4 animated slideInDown">Eliminar Producto</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb justify-content-center mb-0">
                <li class="breadcrumb-item"><a asp-action="Index">Productos</a></li>
                <li class="breadcrumb-item active" aria-current="page">Eliminar</li>
            </ol>
        </nav>
    </div>
</div>

<div class="container mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <!-- Card más angosto -->
            <div class="card shadow-lg border-0 rounded-3 p-4">

                <!-- Encabezado con línea -->
                <div class="d-flex justify-content-between align-items-center mb-3 pb-2 border-bottom">
                    <h4 class="mb-0 text-danger">
                        <i class="bi bi-trash-fill me-2"></i> Eliminar producto
                    </h4>
                </div>

                <div class="row g-4">
                    <!-- Imagen -->
                    <div class="col-md-4 text-center">
                        @if (!string.IsNullOrEmpty(Model.Imagen))
                        {
                            <img src="@Model.Imagen" alt="Imagen del producto"
                                 class="img-fluid rounded shadow-sm"
                                 style="width:100%; height:auto; object-fit:contain;" />
                        }
                        else
                        {
                            <img src="~/img/no-image.png" alt="Sin imagen"
                                 class="img-fluid rounded shadow-sm"
                                 style="width:100%; height:auto; opacity:0.5; object-fit:contain;" />
                        }
                    </div>

                    <!-- Información -->
                    <div class="col-md-8 d-flex flex-column">
                        <div class="mb-3">
                            <h3 class="fw-bold">@Model.Nombre</h3>
                            <p class="text-muted">@Model.Descripcion</p>
                        </div>

                        <dl class="row">
                            <dt class="col-sm-4 fw-bold">Precio Unitario</dt>
                            <dd class="col-sm-8">S/ @Model.Precio</dd>

                            <dt class="col-sm-4 fw-bold">Precio por Mayor</dt>
                            <dd class="col-sm-8">
                                @(Model.PrecioPorMayor.HasValue ? $"S/ {Model.PrecioPorMayor}" : "-")
                            </dd>

                            <dt class="col-sm-4 fw-bold">Umbral Mayorista</dt>
                            <dd class="col-sm-8">
                                @(Model.UmbralMayorista.HasValue? Model.UmbralMayorista + " unidades" : "-")
                            </dd>

                            <dt class="col-sm-4 fw-bold">Stock</dt>
                            <dd class="col-sm-8">@Model.Stock</dd>

                            <dt class="col-sm-4 fw-bold">Categoría</dt>
                            <dd class="col-sm-8">@Model.Categoria?.Nombre</dd>
                        </dl>
                    </div>
                </div>

                <!-- Advertencia que ocupa todo el ancho -->
                <div class="alert alert-danger d-flex align-items-center mt-4" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    <div>
                        ¿Estás seguro de que deseas eliminar este producto? <br />
                        <strong>Esta acción no se puede deshacer.</strong>
                    </div>
                </div>

                <!-- Botones centrados -->
                <form asp-action="Delete" method="post" class="mt-2 d-flex justify-content-center gap-2">
                    <input type="hidden" asp-for="ProductoId" />
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash-fill"></i> Eliminar
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Cancelar
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>
