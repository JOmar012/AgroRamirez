    @model AgropRamirez.Models.Producto

@{
    ViewData["Title"] = "Editar Producto";
}

<!-- Page Header Start -->
<div class="container-fluid page-header py-5 mb-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="container text-center py-5">
        <h1 class="display-3 text-white mb-4 animated slideInDown">Productos</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb justify-content-center mb-0">
                <li class="breadcrumb-item"><a asp-action="Index">Productos</a></li>
                <li class="breadcrumb-item active" aria-current="page">Editar</li>
            </ol>
        </nav>
    </div>  
</div>


<h1 class="mb-4">Editar producto</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProductoId" />

            <!-- Nombre -->
            <div class="form-group mb-3">
                <label asp-for="Nombre" class="form-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <!-- Descripción -->
            <div class="form-group mb-3">
                <label asp-for="Descripcion" class="form-label"></label>
                <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>

            <!-- Precio unitario -->
            <div class="form-group mb-3">
                <label asp-for="Precio" class="form-label"></label>
                <input asp-for="Precio" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>

            <!-- Precio por mayor -->
            <div class="form-group mb-3">
                <label asp-for="PrecioPorMayor" class="form-label"></label>
                <input asp-for="PrecioPorMayor" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="PrecioPorMayor" class="text-danger"></span>
            </div>

            <!-- Umbral mayorista -->
            <div class="form-group mb-3">
                <label asp-for="UmbralMayorista" class="form-label"></label>
                <input asp-for="UmbralMayorista" class="form-control" type="number" />
                <span asp-validation-for="UmbralMayorista" class="text-danger"></span>
            </div>

            <!-- Stock -->
            <div class="form-group mb-3">
                <label asp-for="Stock" class="form-label"></label>
                <input asp-for="Stock" class="form-control" type="number" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>

            <!-- Imagen actual -->
            @if (!string.IsNullOrEmpty(Model.Imagen))
            {
                <div class="form-group mb-3">
                    <label>Imagen actual</label><br />
                    <img src="@Model.Imagen" alt="Imagen actual" style="max-width:200px; border:1px solid #ccc; padding:5px; border-radius:6px;" />
                </div>
            }

            <!-- Nueva Imagen -->
            <div class="form-group mb-3">
                <label asp-for="ImagenFile" class="form-label">Nueva imagen (opcional)</label>
                <input asp-for="ImagenFile" type="file" class="form-control" accept="image/*" onchange="previewImage(event)" />
                <span asp-validation-for="ImagenFile" class="text-danger"></span>
            </div>

            <!-- Vista previa de nueva imagen -->
            <div class="form-group mb-3">
                <img id="preview" src="#" alt="Vista previa de la nueva imagen" style="max-width:250px; display:none; border:1px solid #ccc; padding:5px; border-radius:6px;" />
            </div>

            <!-- Categoría -->
            <div class="form-group mb-3">
                <label asp-for="CategoriaId" class="form-label">Categoría</label>
                <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.CategoriaId"></select>
                <span asp-validation-for="CategoriaId" class="text-danger"></span>
            </div>

            <!-- Botones -->
            <div class="form-group">
                <input type="submit" value="Guardar cambios" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary ms-2">Volver</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
