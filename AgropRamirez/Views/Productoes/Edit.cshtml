    @model AgropRamirez.Models.Producto

@{
    ViewData["Title"] = "Editar Producto";
}

<!-- Page Header Start -->
<div class="container-fluid page-header py-5 mb-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="container text-center py-5">
        <h1 class="display-3 text-white mb-4 animated slideInDown">Editar Producto</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb justify-content-center mb-0">
                <li class="breadcrumb-item"><a asp-action="Index">Productos</a></li>
                <li class="breadcrumb-item active" aria-current="page">Editar</li>
            </ol>
        </nav>
    </div>
</div>
<!-- Page Header End -->

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">

            <div class="card shadow-lg border-0 rounded-3">
                <!-- Avatar de animal de granja -->
                <div class="card-header text-center bg-white">

                    <h4 class="mb-0 fw-bold text-warning">Editar Producto</h4>

                    <div class="avatar-preview mx-auto d-flex align-items-center justify-content-center rounded-circle shadow mb-3"
                         style="width:120px; height:120px; background-color:#fff; border:3px solid #ffc107; color:#ffc107;">
                        <i class="fas fa-horse" style="font-size:48px;"></i>
                    </div>
                    
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="ProductoId" />

                        <!-- Nombre -->
                        <div class="mb-3">
                            <label asp-for="Nombre" class="form-label">
                                <i class="bi bi-box"></i> Nombre
                            </label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-box"></i></span>
                                <input asp-for="Nombre" class="form-control" />
                            </div>
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <!-- Descripción -->
                        <div class="mb-3">
                            <label asp-for="Descripcion" class="form-label">
                                <i class="bi bi-card-text"></i> Descripción
                            </label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-card-text"></i></span>
                                <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
                            </div>
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>

                        <!-- Precio -->
                        <div class="mb-3">
                            <label asp-for="Precio" class="form-label">
                                <i class="bi bi-currency-dollar"></i> Precio Unitario
                            </label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-currency-dollar"></i></span>
                                <input asp-for="Precio" class="form-control" type="number" step="0.01" />
                            </div>
                            <span asp-validation-for="Precio" class="text-danger"></span>
                        </div>

                        <!-- Precio por mayor -->
                        <div class="mb-3">
                            <label asp-for="PrecioPorMayor" class="form-label">
                                <i class="bi bi-cart4"></i> Precio por Mayor
                            </label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-cart4"></i></span>
                                <input asp-for="PrecioPorMayor" class="form-control" type="number" step="0.01" />
                            </div>
                            <span asp-validation-for="PrecioPorMayor" class="text-danger"></span>
                        </div>

                        <!-- Umbral -->
                        <div class="mb-3">
                            <label asp-for="UmbralMayorista" class="form-label">
                                <i class="bi bi-123"></i> Umbral Mayorista
                            </label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-123"></i></span>
                                <input asp-for="UmbralMayorista" class="form-control" type="number" />
                            </div>
                            <span asp-validation-for="UmbralMayorista" class="text-danger"></span>
                        </div>

                        <!-- Stock -->
                        <div class="mb-3">
                            <label asp-for="Stock" class="form-label">
                                <i class="bi bi-box-seam"></i> Stock
                            </label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-box-seam"></i></span>
                                <input asp-for="Stock" class="form-control" type="number" />
                            </div>
                            <span asp-validation-for="Stock" class="text-danger"></span>
                        </div>

                        <!-- Imagen actual -->
                        @if (!string.IsNullOrEmpty(Model.Imagen))
                        {
                            <div class="mb-3 text-center">
                                <label class="form-label"><i class="bi bi-image"></i> Imagen actual</label><br />
                                <img src="@Model.Imagen" alt="Imagen actual"
                                     style="max-width:200px; border:1px solid #ccc; padding:5px; border-radius:6px;" />
                            </div>
                        }

                        <!-- Nueva imagen -->
                        <div class="mb-3">
                            <label asp-for="ImagenFile" class="form-label">
                                <i class="bi bi-upload"></i> Nueva imagen (opcional)
                            </label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-upload"></i></span>
                                <input asp-for="ImagenFile" type="file" class="form-control" accept="image/*" onchange="previewImage(event)" />
                            </div>
                            <span asp-validation-for="ImagenFile" class="text-danger"></span>
                        </div>

                        <!-- Vista previa -->
                        <div class="text-center mb-3">
                            <img id="preview" src="#" alt="Vista previa de la nueva imagen"
                                 style="max-width:200px; display:none; border:1px solid #ccc; padding:5px; border-radius:6px;" />
                        </div>

                        <!-- Categoría -->
                        <div class="mb-3">
                            <label asp-for="CategoriaId" class="form-label">
                                <i class="bi bi-tags"></i> Categoría
                            </label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-tags"></i></span>
                                <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.CategoriaId"></select>
                            </div>
                            <span asp-validation-for="CategoriaId" class="text-danger"></span>
                        </div>

                        <!-- Botones -->
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left-circle"></i> Volver
                            </a>
                            <button type="submit" class="btn btn-warning text-white">
                                <i class="bi bi-check-circle"></i> Guardar cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        function previewImage(event) {
            var reader = new FileReader();
            reader.onload = function () {
                var output = document.getElementById('preview');
                output.src = reader.result;
                output.style.display = 'block';
            };
            reader.readAsDataURL(event.target.files[0]);
        }
    </script>
}