@model AgropRamirez.Models.CotizacionDetalle

@{
    ViewData["Title"] = "Detalle del Detalle de Cotización";
}

<!-- Encabezado -->
<div class="container-fluid page-header py-5 mb-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="container text-center py-5">
        <h1 class="display-3 text-white mb-4 animated slideInDown">Detalle de CotizaciónDetalle</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb justify-content-center mb-0">
                <li class="breadcrumb-item"><a asp-action="Index">Cotización Detalles</a></li>
                <li class="breadcrumb-item active" aria-current="page">Detalle</li>
            </ol>
        </nav>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">

            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-info text-white text-center">
                    <h4 class="mb-0"><i class="bi bi-file-earmark-text"></i> Información del Detalle</h4>
                </div>
                <div class="card-body p-4">

                    <dl class="row">
                        <dt class="col-sm-4">Producto</dt>
                        <dd class="col-sm-8">@Model.Producto?.Nombre</dd>

                        <dt class="col-sm-4">Cantidad</dt>
                        <dd class="col-sm-8">@Model.Cantidad</dd>

                        <dt class="col-sm-4">Precio Unitario</dt>
                        <dd class="col-sm-8">S/ @Model.PrecioUnitario.ToString("0.00")</dd>

                        <dt class="col-sm-4">SubTotal</dt>
                        <dd class="col-sm-8">S/ @(Model.Cantidad* Model.PrecioUnitario).ToString("0.00")</dd>

                        <dt class="col-sm-4">Cotización</dt>
                        <dd class="col-sm-8">@Model.Cotizacion?.FechaCotizacion.ToString("dd/MM/yyyy")</dd>
                    </dl>

                </div>
                <div class="card-footer text-center">
                    <a asp-action="Edit" asp-route-id="@Model?.CotizacionDetalleId" class="btn btn-warning text-white me-2">
                        <i class="bi bi-pencil-square"></i> Editar
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Volver
                    </a>
                </div>
            </div>

        </div>
    </div>
</div>
