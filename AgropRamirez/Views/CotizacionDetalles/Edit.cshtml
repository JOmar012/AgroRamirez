@model AgropRamirez.Models.CotizacionDetalle

@{
    ViewData["Title"] = "Editar Detalle de Cotización";
}

<!-- Encabezado -->
<div class="container-fluid page-header py-5 mb-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="container text-center py-5">
        <h1 class="display-3 text-white mb-4 animated slideInDown">Editar Detalle de Cotización</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb justify-content-center mb-0">
                <li class="breadcrumb-item"><a asp-action="Index">Cotización Detalles</a></li>
                <li class="breadcrumb-item active" aria-current="page">Editar</li>
            </ol>
        </nav>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">

            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-warning text-dark text-center">
                    <h4 class="mb-0"><i class="bi bi-pencil-square"></i> Modificar Detalle</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="CotizacionDetalleId" />

                        <!-- Cotización -->
                        <div class="mb-3">
                            <label asp-for="CotizacionId" class="form-label"></label>
                            <select asp-for="CotizacionId" class="form-select" asp-items="ViewBag.CotizacionId"></select>
                            <span asp-validation-for="CotizacionId" class="text-danger"></span>
                        </div>

                        <!-- Producto -->
                        <div class="mb-3">
                            <label asp-for="ProductoId" class="form-label"></label>
                            <select asp-for="ProductoId" class="form-select" asp-items="ViewBag.ProductoId"></select>
                            <span asp-validation-for="ProductoId" class="text-danger"></span>
                        </div>

                        <!-- Cantidad -->
                        <div class="mb-3">
                            <label asp-for="Cantidad" class="form-label"></label>
                            <input asp-for="Cantidad" class="form-control" id="Cantidad" type="number" min="1" />
                            <span asp-validation-for="Cantidad" class="text-danger"></span>
                        </div>

                        <!-- Precio Unitario -->
                        <div class="mb-3">
                            <label asp-for="PrecioUnitario" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text">S/</span>
                                <input asp-for="PrecioUnitario" class="form-control" id="PrecioUnitario" type="number" step="0.01" />
                            </div>
                            <span asp-validation-for="PrecioUnitario" class="text-danger"></span>
                        </div>

                        <!-- SubTotal (calculado automáticamente) -->
                        <div class="mb-3">
                            <label class="form-label">SubTotal</label>
                            <div class="input-group">
                                <span class="input-group-text">S/</span>
                                <input class="form-control" id="SubTotal" type="text" readonly />
                            </div>
                        </div>

                        <!-- Botones -->
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left-circle"></i> Volver
                            </a>
                            <button type="submit" class="btn btn-warning text-white">
                                <i class="bi bi-save"></i> Guardar Cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    @* Calcular el total *@
    <script>
        function calcularSubTotal() {
            let cantidad = parseFloat(document.getElementById("Cantidad").value) || 0;
            let precio = parseFloat(document.getElementById("PrecioUnitario").value) || 0;
            let subtotal = cantidad * precio;
            document.getElementById("SubTotal").value = subtotal.toFixed(2);
        }

        // Eventos
        document.getElementById("Cantidad").addEventListener("input", calcularSubTotal);
        document.getElementById("PrecioUnitario").addEventListener("input", calcularSubTotal);

        // Inicializar al cargar la vista (para ver el subtotal de los valores actuales)
        window.addEventListener("DOMContentLoaded", calcularSubTotal);
    </script>
}
