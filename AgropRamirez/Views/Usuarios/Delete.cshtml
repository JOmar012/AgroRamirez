@model AgropRamirez.Models.Usuario

@{
    ViewData["Title"] = "Eliminar Usuario";
}

<!-- Encabezado -->
<div class="container-fluid page-header py-5 mb-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="container text-center py-5">
        <h1 class="display-3 text-white mb-4 animated slideInDown">Eliminar Usuario</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb justify-content-center mb-0">
                <li class="breadcrumb-item"><a asp-action="Index">Usuarios</a></li>
                <li class="breadcrumb-item active" aria-current="page">Eliminar</li>
            </ol>
        </nav>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">

            <div class="card shadow-lg border-0 rounded-3">
                <!-- Header Rojo -->
                <div class="card-header custom-header-delete text-center">
                    <h4 class="mb-0"><i class="bi bi-trash"></i> Confirmar Eliminación</h4>
                    <div class="mt-2">
                        <i class="bi bi-exclamation-triangle fs-3"></i>
                    </div>
                </div>

                <div class="card-body p-4">
                    <h5 class="text-center text-danger mb-4">
                        ¿Está seguro que desea eliminar este usuario?
                    </h5>

                    <!-- Ficha con imagen e info -->
                    <div class="d-flex align-items-start">
                        <!-- Imagen -->
                        <div class="me-4">
                            <img src="@(string.IsNullOrEmpty(Model.Imagen) ? Url.Content("~/img/usuarios/usuarie.png") : Model.Imagen)"
                                 class="img-thumbnail rounded"
                                 style="width:120px; height:120px; object-fit:cover;" />
                        </div>

                        <!-- Información del usuario -->
                        <div>
                            <p><strong>Nombre:</strong> @Model.Nombre</p>
                            <p><strong>Apellido:</strong> @Model.Apellido</p>
                            <p><strong>DNI:</strong> @Model.Dni</p>
                            <p><strong>Email:</strong> @Model.Email</p>
                            <p><strong>Rol:</strong> @Model.Rol</p>
                            <p><strong>Registrado:</strong> @Model.FechaRegistro</p>
                        </div>
                    </div>

                    <!-- Botones -->
                    <form asp-action="Delete" class="mt-4">
                        <input type="hidden" asp-for="UsuarioId" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left-circle"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash-fill"></i> Eliminar
                            </button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>
