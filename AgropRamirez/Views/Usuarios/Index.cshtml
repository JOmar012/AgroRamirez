@model IEnumerable<AgropRamirez.Models.Usuario>

@{
    ViewData["Title"] = "Usuarios";
}

<!-- Page Header Start -->
<div class="container-fluid page-header py-5 mb-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="container text-center py-5">
        <h1 class="display-3 text-white mb-4 animated slideInDown">Usuarios</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb justify-content-center mb-0">
                <li class="breadcrumb-item active" aria-current="page">Usuarios</li>
            </ol>
        </nav>
    </div>
</div>
<!-- Page Header End -->

<div class="container mb-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h4 class="mb-0"><i class="bi bi-people-fill"></i> Lista de Usuarios</h4>
                <a asp-action="Create" class="btn btn-success">
                    <i class="bi bi-person-plus-fill"></i> Nuevo Usuario
                </a>
            </div>

            <div class="table-responsive">
                <table class="table table-custom align-middle text-center">
                    <thead> 
                        <tr>
                            <th><i class="bi bi-person-fill"></i> @Html.DisplayNameFor(model => model.Nombre)</th>
                            <th><i class="bi bi-person-vcard"></i> @Html.DisplayNameFor(model => model.Apellido)</th>
                            <th><i class="bi bi-credit-card-2-front"></i> @Html.DisplayNameFor(model => model.Dni)</th>
                            <th><i class="bi bi-geo-alt-fill"></i> @Html.DisplayNameFor(model => model.Direccion)</th>
                            @* <th><i class="bi bi-image-fill"></i> @Html.DisplayNameFor(model => model.Imagen)</th> *@
                            <th><i class="bi bi-envelope-fill"></i> @Html.DisplayNameFor(model => model.Email)</th>
                            @* <th><i class="bi bi-key-fill"></i> @Html.DisplayNameFor(model => model.PasswordHash)</th> *@
                            <th><i class="bi bi-shield-lock-fill"></i> @Html.DisplayNameFor(model => model.Rol)</th>
                            @* <th><i class="bi bi-calendar-date-fill"></i> @Html.DisplayNameFor(model => model.FechaRegistro)</th> *@
                            <th><i class="bi bi-gear-fill"></i> Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <!-- Imagen + Nombre -->
                                <td class="text-start">
                                    <div class="d-flex align-items-center">
                                        <img src="@item.Imagen" alt="Foto" class="user-avatar me-2" />
                                        <span>@item.Nombre</span>
                                    </div>
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.Apellido)</td>
                                <td>@Html.DisplayFor(modelItem => item.Dni)</td>
                                <td>@Html.DisplayFor(modelItem => item.Direccion)</td>
                                @* <td>@Html.DisplayFor(modelItem => item.Imagen)</td> *@
                                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                @* <td>@Html.DisplayFor(modelItem => item.PasswordHash)</td> *@
                                <td>@Html.DisplayFor(modelItem => item.Rol)</td>
                                @* <td>@Html.DisplayFor(modelItem => item.FechaRegistro)</td> *@
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.UsuarioId"
                                       class="btn-icon btn-edit" title="Editar">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.UsuarioId"
                                       class="btn-icon btn-details" title="Detalles">
                                        <i class="bi bi-eye-fill"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.UsuarioId"
                                       class="btn-icon btn-delete" title="Eliminar">
                                        <i class="bi bi-trash-fill"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
