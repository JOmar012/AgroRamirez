@model AgropRamirez.ViewModels.UsuarioCreateVM

@{
    ViewData["Title"] = "Editar Usuario";
}

<!-- Page Header Start -->
<!-- Encabezado -->
<div class="container-fluid page-header py-5 mb-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="container text-center py-5">
        <h1 class="display-3 text-white mb-4 animated slideInDown">Editar Usuario</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb justify-content-center mb-0">
                <li class="breadcrumb-item"><a asp-action="Index">Usuarios</a></li>
                <li class="breadcrumb-item active" aria-current="page">Editar</li>
            </ol>
        </nav>
    </div>
</div>
<!-- Page Header End -->

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">

            <div class="card shadow-lg border-0 rounded-3">
                <!-- Header Amarillo -->
                <div class="card-header custom-header-edit text-center">
                    <h4 class="mb-0"><i class="bi bi-pencil-square"></i> Editar Usuario</h4>
                    <div class="mt-2">
                        <i class="bi bi-person-bounding-box fs-3"></i>
                    </div>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Edit" asp-route-id="@Model.UsuarioId" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <input type="hidden" asp-for="UsuarioId" />

                        <!-- Nombre -->
                        <div class="mb-3">
                            <label asp-for="Nombre" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-person"></i></span>
                                <input asp-for="Nombre" class="form-control" />
                            </div>
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <!-- Apellido -->
                        <div class="mb-3">
                            <label asp-for="Apellido" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-person-lines-fill"></i></span>
                                <input asp-for="Apellido" class="form-control" />
                            </div>
                            <span asp-validation-for="Apellido" class="text-danger"></span>
                        </div>

                        <!-- DNI -->
                        <div class="mb-3">
                            <label asp-for="Dni" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-card-text"></i></span>
                                <input asp-for="Dni" class="form-control" />
                            </div>
                            <span asp-validation-for="Dni" class="text-danger"></span>
                        </div>

                        <!-- Dirección -->
                        <div class="mb-3">
                            <label asp-for="Direccion" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-geo-alt"></i></span>
                                <input asp-for="Direccion" class="form-control" />
                            </div>
                            <span asp-validation-for="Direccion" class="text-danger"></span>
                        </div>

                        <!-- Imagen actual -->
                        @if (!string.IsNullOrEmpty(Model.Imagen))
                        {
                            <div class="mb-3 text-center">
                                <label>Imagen actual:</label><br />
                                <img src="@Model.Imagen" class="img-thumbnail rounded" style="max-width: 120px;" />
                            </div>
                        }

                        <!-- Nueva imagen -->
                        <div class="mb-3">
                            <label asp-for="ImagenFile" class="form-label">Nueva imagen (opcional)</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-image"></i></span>
                                <input asp-for="ImagenFile" type="file" class="form-control" accept="image/*" onchange="previewImageEdit(event)" />
                            </div>
                            <span asp-validation-for="ImagenFile" class="text-danger"></span>

                            <!-- Vista previa de la nueva imagen -->
                            <div class="mt-3 text-center">
                                <img id="previewEdit" class="img-thumbnail rounded" style="max-width: 120px; display: none;" />
                            </div>
                        </div>

                        <!-- Email -->
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                                <input asp-for="Email" class="form-control" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <!-- Password -->
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Nueva contraseña (opcional)</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-lock"></i></span>
                                <input asp-for="Password" type="password" class="form-control" />
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <!-- Rol -->
                        <div class="mb-3">
                            <label asp-for="Rol" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-shield-lock"></i></span>
                                <input asp-for="Rol" class="form-control" />
                            </div>
                            <span asp-validation-for="Rol" class="text-danger"></span>
                        </div>

                        <!-- Botones -->
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left-circle"></i> Volver
                            </a>
                            <button type="submit" class="btn btn-warning text-white">
                                <i class="bi bi-check-circle"></i> Guardar cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    @* //ver imagen *@
    <script>
        function previewImageEdit(event) {
            var preview = document.getElementById('previewEdit');
            var file = event.target.files[0];

            if (file) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    preview.src = e.target.result;
                    preview.style.display = "block";
                }
                reader.readAsDataURL(file);
            } else {
                preview.style.display = "none";
            }
        }
    </script>
}
